{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "germanywestcentral",
      "allowedValues": [
        "germanywestcentral",
        "westeurope",
        "swedencentral",
        "northeurope"
      ],
      "metadata": {
        "description": "EU-Region. Bei Bedarf kann eine andere Region gewählt werden, falls das Modell dort unterstützt wird."
      }
    },
    "accountName": {
      "type": "string",
      "defaultValue": "openaiIHRMAKLERNAME",
      "minLength": 3,
      "maxLength": 63,
      "metadata": { "description": "Nur Kleinbuchstaben/Ziffern; wird Teil der Endpoint-URL." }
    },
    "deploymentName": {
      "type": "string",
      "defaultValue": "gpt-4o",
      "metadata": { "description": "Name des Modell-Deployments" }
    },
    "modelName": {
      "type": "string",
      "defaultValue": "gpt-4o",
      "allowedValues": [ "gpt-4o", "gpt-4o-mini" ]
    },
    "modelVersion": {
      "type": "string",
      "defaultValue": "2025-06-01",
      "metadata": { "description": "Regionale Verfügbarkeit beachten." }
    },
    "publicNetworkAccess": {
      "type": "string",
      "defaultValue": "Enabled",
      "allowedValues": [ "Enabled", "Disabled" ]
    }
  },
  "resources": [
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2025-06-01",
      "name": "[parameters('accountName')]",
      "location": "[parameters('location')]",
      "kind": "OpenAI",
      "sku": { "name": "S0" },
      "properties": {
        "publicNetworkAccess": "[parameters('publicNetworkAccess')]"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2025-06-01",
      "name": "[format('{0}/{1}', parameters('accountName'), parameters('deploymentName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', parameters('accountName'))]"
      ],
      "sku": {
        "name": "Standard",
        "capacity": 1
      },
      "properties": {
        "model": {
          "format": "OpenAI",
          "name": "[parameters('modelName')]",
          "version": "[parameters('modelVersion')]"
        },
        "versionUpgradeOption": "OnceNewDefaultVersionAvailable"
      }
    }
  ],
  "outputs": {
    "endpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', parameters('accountName'))).endpoint]"
    }
  }
}
